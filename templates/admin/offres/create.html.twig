{% extends "layout.html.twig" %}

{% block content %}
    <div class="titre d-flex flex-column align-items-center justify-content-center mt-4" id="maintitre">
      <h1 class="fw-bold text-dark text-center display-4 display-sm-5 display-lg-6">
        Créer une nouvelle offre
      </h1>
    </div>

    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-8">
                  {% if flash %}
            <div class="alert alert-{{ flash.type }} mb-4">
              {{ flash.message }}
            </div>
          {% endif %}
          <form method="POST" action="{{ url_for('offres.create') }}">
            <div class="mb-3">
              <label for="title" class="form-label">Titre</label>
              <input type="text" id="title" name="title" class="form-control" value="{{ old_input.title ?? '' }}" required>
              {% if errors.title %}
                <div class="text-danger">{{ errors.title }}</div>
              {% endif %}
            </div>

            <div class="mb-3">
              <label for="company" class="form-label">Entreprise</label>
              <input type="text" id="company" name="company" class="form-control" value="{{ old_input.company ?? '' }}" required>
            </div>

            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <textarea id="description" name="description" class="form-control">{{ old_input.description ?? '' }}</textarea>
            </div>

            <div class="mb-3">
              <label for="skills" class="form-label">Compétences</label>
              <input type="text" id="skills" name="skills" class="form-control" value="{{ old_input.skills ?? '' }}">
            </div>

            <div class="mb-3">
              <label for="location" class="form-label">Lieu</label>
              <input type="text" id="location" name="location" class="form-control" value="{{ old_input.location ?? '' }}">
            </div>

            <div class="mb-3">
              <label for="salary" class="form-label">Salaire</label>
              <input type="number" id="salary" name="salary" class="form-control" value="{{ old_input.salary ?? '' }}" step="0.01">
            </div>

            <div class="mb-3">
              <label for="contractType" class="form-label">Type de contrat</label>
              <input type="text" id="contractType" name="contractType" class="form-control" value="{{ old_input.contractType ?? '' }}">
            </div>

            <button type="submit" class="btn btn-primary">Créer</button>
          </form>
        </div>
      </div>
    </div>
{% include 'footer.html.twig' %}
{% endblock %}
